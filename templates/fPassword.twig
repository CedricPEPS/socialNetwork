{% extends 'layout.twig' %}

{% block content %}
{% if userExist %}
<div class="container logon">
		<div class="row">
			<div class="col-xs-offset-1 col-xs-10 text-center">
				
				<h2> Lost Password </h2>

				<form method="post" action="{{root}}fPassword/newPassword">
					<input type="text" class="form-control" name="password" value="" placeholder="Password">
					<input type="password" class="form-control" name="confPassword" value="" placeholder="Confirm Password">
					<input type="text" name="pseudo" value="{{pseudo}}" hidden="hidden">	

					<button type="submit" class="btn btn-lg"> Lost Password </button>
				</form>
			</div>
		</div>
	</div>
{% else %}
<div class="container logon">
		<div class="row">
			<div class="col-xs-offset-1 col-xs-10 text-center">
				
				<h2> Lost Password </h2>

				<form method="post" action="{{root}}fPassword">
					<input type="text" class="form-control" name="login" value="" placeholder="Login">
					<input type="email" class="form-control" name="mail" value="" placeholder="Email">				

					<button type="submit" class="btn btn-lg"> Lost Password </button>
				</form>
			</div>
		</div>
	</div>
{% endif %}
{% endblock %}