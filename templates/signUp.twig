{% extends 'layout.twig' %}

{% block content %}

{% if validate == false %}

    <div class="container logon">
		<div class="row">
			<div class="col-xs-offset-1 col-xs-10 text-center">
				
				<h2> Sign Up ! </h2>

				<span id="message"> {{error}} </span>
				
				<form method="post" action="{{root}}signUp/create">

					<input type="text" 		class="form-control" 	name="firstname" 	value="{{firstname}}" 	placeholder="First Name">
					<input type="text"	 	class="form-control" 	name="lastname" 	value="{{lastname}}" 	placeholder="Last Name">
					<input type="email"		class="form-control" 	name="mail" 		value="{{mail}}" 		placeholder="Email">
					<input type="pseudo" 	class="form-control" 	name="pseudo" 		value="{{pseudo}}" 		placeholder="pseudo">
					<input type="password" 	class="form-control" 	name="password" 	value="" 				placeholder="Password">
					<input type="password" 	class="form-control" 	name="confPassword" value="" 				placeholder="Confirm Password">

					<div class="row">
						<div class="col-xs-offset-1 col-xs-10 text-left box-link">
				
							<p>
								<a href="{{root}}home">Login</a> 
							</p>
				
						</div>
					</div>

					<button type="submit" class="btn btn-lg"> Create account </button>

				</form>

			</div>
		</div>
	</div>

{% else %}

    <div class="container logon">
		<div class="row">
			<div class="col-xs-offset-1 col-xs-10 text-center">
				
				<h2> Sign Up ! </h2>

				<span id="message"></span>
				
				
				<form method="post" action="{{root}}signUp/create">

					<input type="text" 		class="form-control" 	name="firstname" 	value="" placeholder="First Name">
					<input type="text"	 	class="form-control" 	name="lastname" 	value="" placeholder="Last Name">
					<input type="email"		class="form-control" 	name="mail" 		value="" placeholder="Email">
					<input type="pseudo" 	class="form-control" 	name="pseudo" 		value="" placeholder="pseudo">
					<input type="password" 	class="form-control" 	name="password" 	value="" placeholder="Password">
					<input type="password" 	class="form-control" 	name="confPassword" value="" placeholder="Confirm Password">

					<div class="row">
						<div class="col-xs-offset-1 col-xs-10 text-left box-link">
				
							<p>
								<a href="{{root}}home">Login</a> 
							</p>
				
						</div>
					</div>

					<button type="submit" class="btn btn-lg"> Create account </button>

				</form>

			</div>
		</div>
	</div>

{% endif %}
{% endblock %}