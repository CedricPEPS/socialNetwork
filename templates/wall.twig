{% extends 'layout.twig' %}

{% block content %}

{% if isFriend %}

		<div class="container header-wall">
	    	<div class ="row">
	        	<div class="col-xs-offset-1 col-xs-10 text-center">  
	        		<p> Publication of {{pseudo}} </p>
	        	</div>
	    	</div>
	    </div>
		
	{% if articles %}
		{% for article in articles %}
			<div class="container article">
		    	<div class ="row">
		        	<div class="col-xs-offset-1 col-xs-10 text-justify">{{ article.content|e }} <br> 
		        		<div class="publish"> {{ article.date}} </div>
		        	</div>
		    	</div>
		    </div>
		{% endfor %}

	{% else %} 

		<div class="container">
	    	<div class ="row">
	        	<div class="col-xs-offset-1 col-xs-10 text-center">  
	        		<p> Sorry not publication for the moment </p>
	        	</div>
	    	</div>
	    </div>

	{% endif %}

{% else %}
	
	<div class="container">
	   	<div class ="row">
	       	<div class="col-xs-offset-1 col-xs-10 text-center">  
	       		<p> Sorry your are not allowed to see this wall... </p>
	       		<p> If you want ask him for to become your friend ! </p>
	       	</div>
	   	</div>
	</div>


{% endif %}


{% endblock %}