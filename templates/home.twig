{% extends 'layout.twig' %}

{% block content %}

{% if online == true %}

	<div class="container logon">
		<div class="row">
			<div class="col-xs-offset-1 col-xs-8 text-center">
				<h2></h2>
				<form method="post" action="{{root}}home/createArticle">
					<textarea type="text" class="form-control" name="content" value="" placeholder="message" required></textarea>
			</div>
			<div class="col-xs-2">
				<button type="submit" id="submit" class="btn btn-small glyphicon glyphicon-share-alt"></button>
				</form>
			</div>
		</div>
	</div>

{% for article in articles %}
	<div class="container article">
    	<div class ="row">
        	<div class="col-xs-offset-1 col-xs-10 text-justify">{{ article.content|e }} <br> 
        		<div class="publish"> {{ article.date}} </div>
        	</div>
    	</div>
    </div>
{% endfor %}

{% else %}

	<div class="container logon">
		<div class="row">
			<div class="col-xs-offset-1 col-xs-10 text-center">
				<span id="message"> {{error}} </span>
				<h2> Sign In ! </h2>
				<form method="post" action="{{root}}home/log">
					<input type="text" class="form-control" name="login" value="" placeholder="Login">
					<input type="password" class="form-control" name="password" value="" placeholder="Password">

					<div class="row">
						<div class="col-xs-offset-1 col-xs-10 text-left box-link">
							<p><a href="{{root}}signUp">Sign Up</a></p>
							<p><a href="{{root}}fPassword">Lost password</a></p>
						</div>
					</div>

					<button type="submit" class="btn btn-lg"> Sign In </button>
				</form>
			</div>
		</div>
	</div>

{% endif %}

{% endblock %}